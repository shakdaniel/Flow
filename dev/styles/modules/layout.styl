html, body
	width 100%
	height 100%
	margin 0
	padding 0
	
html
	background #f5f5f5
	letter-spacing 2px
a
	text-decoration none

header
	background #fff
	position fixed
	width 100%
	top 0
	border-bottom 1px solid #eee

.logo
	float left
	padding 10px 50px
	text-transform uppercase
	color #444
	font-family sans-serif

.menu li
	float left
	padding 10px 0
	border-right 1px solid #eee

.menu li:first-child
	border-left 1px solid #eee

.menu li a
	padding 10px
	color #999

.menu li a:hover, .menu .active
	background rgba(0,0,0,.025)
	color SteelBlue
.menu .active
	border-bottom 1px solid SteelBlue
	padding-bottom 8px

.login li
	float right
	padding 10px 0

.login li a
	padding 10px

.container
	margin-top 10%
	height auto