html, body
	position: absolute
	width 100%
	height 100%
	margin 0
	padding 0
	background linear-gradient(top, #bbb, #000)
	color #333
h1
	font-size 4em
	text-shadow 5px 5px 2px rgba(0,0,0,.3)
p
	font-size 20px
ul li
	position relative
	list-style-type none
	display inline
	background #555
	padding 10px
	margin 5px
	box-shadow 5px 5px 10px rgba(0,0,0,1)
	border-radius 20px